python import random class CarteDeFoot: def __init__(self, nom, position, attaque, defense, passe, dribble, capacite_speciale): self.nom = nom self.position = position self.attaque = attaque self.defense = defense self.passe = passe self.dribble = dribble self.capacite_speciale = capacite_speciale def __str__(self): return f"{self.nom} - {self.position} - Attaque: {self.attaque}, Défense: {self.defense}, Passe: {self.passe}, Dribble: {self.dribble}, Capacité spéciale: {self.capacite_speciale}" def creer_deck(): noms = ["Joueur A", "Joueur B", "Joueur C", "Joueur D", "Joueur E", "Joueur F", "Joueur G", "Joueur H"] positions = ["Attaquant", "Milieu", "Défenseur", "Gardien"] capacites_speciales = ["Tir puissant", "Tacle précis", "Passe aveugle", "Dribble insaisissable", "Arrêt réflexe", "Anticipation"] deck = [] for nom in noms: position = random.choice(positions) attaque = random.randint(1, 100) defense = random.randint(1, 100) passe = random.randint(1, 100) dribble = random.randint(1, 100) capacite_speciale = random.choice(capacites_speciales) carte = CarteDeFoot(nom, position, attaque, defense, passe, dribble, capacite_speciale) deck.append(carte) return deck def comparer_statistiques(carte1, carte2, stat): score1 = getattr(carte1, stat) score2 = getattr(carte2, stat) if score1 > score2: return 1 elif score2 > score1: return 2 else: return 0 def jouer_manches(deck1, deck2): manches = len(deck1) score_joueur1 = 0 score_joueur2 = 0 for i in range(manches): carte1 = deck1.pop(0) carte2 = deck2.pop(0) print(f"\nManche {i + 1}:") print(f"Joueur 1: {carte1}") print(f"Joueur 2: {carte2}") statistiques = ["attaque", "defense", "passe", "dribble"] stat_choisie = random.choice(statistiques) print(f"Statistique choisie: {stat_choisie}") resultat = comparer_statistiques(carte1, carte2, stat_choisie) if resultat == 1: print("Joueur 1 remporte la manche!") score_joueur1 += 1 elif resultat == 2: print("Joueur 2 remporte la manche!") score_joueur2 += 1 else: print("Manche nulle!") if score_joueur1 > score_joueur2: print("\nJoueur 1 remporte le match!") elif score_joueur2 > score_joueur1: print("\nJoueur 2 remporte le match!") else: print("\nLe match est nul!") def main(): deck1 = creer_deck() deck2 = creer_deck() print("Deck Joueur 1:") for carte in deck1: print(carte) print("\nDeck Joueur 2:") for carte in deck2: print(carte) jouer_manches(deck1, deck2) if __name__ == "__main__": main()
